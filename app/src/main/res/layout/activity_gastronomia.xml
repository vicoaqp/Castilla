<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Gastronomia">

    <ScrollView
        android:id="@+id/scrollrestaurant"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_fundo1"
                style="@style/botonesdise"
                android:background="@drawable/fundobarra3" />

            <Button
                android:id="@+id/button_hrambo1"
                style="@style/botonesdise"
                android:background="@drawable/rambo" />

            <Button
                android:id="@+id/button_titanic1"
                style="@style/botonesdise"
                android:background="@drawable/titanic" />

            <Button
                android:id="@+id/button_casademauro"
                style="@style/botonesdise"
                android:background="@drawable/casademauro" />

            <Button
                android:id="@+id/button_majesriver"
                style="@style/botonesdise"
                android:background="@drawable/majesriver"
                 />

            <Button
                android:id="@+id/button_rokasbambu"
                style="@style/botonesdise"
                android:background="@drawable/rokasbambu" />

            <Button
                android:id="@+id/button_fundoyupanqui"
                style="@style/botonesdise"
                android:background="@drawable/fundoyupanqui" />

            <Button
                android:id="@+id/button_ksamia"
                style="@style/botonesdise"
                android:background="@drawable/ksamia"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>